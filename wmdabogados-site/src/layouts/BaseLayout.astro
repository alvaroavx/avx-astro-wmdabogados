---
import SEO from "../components/SEO.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

const { title = "WMD Abogados", description = "Firma de abogados en Chile que transmite confianza, ética y excelencia." } = Astro.props;
---

<html lang="es" class="scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <SEO title={title} description={description} />
    <link rel="stylesheet" href="/src/styles/base.css" />
  </head>
  <body class="min-h-screen flex flex-col font-sans text-gray-900 bg-gray-50">
    <!-- Link de accesibilidad: skip link -->
    <a href="#contenido" class="sr-only focus:not-sr-only focus:absolute focus:top-2 focus:left-2 bg-petroleo text-white px-3 py-2 rounded-md z-50">
      Saltar al contenido principal
    </a>

    <!-- Encabezado -->
    <Header />

    <!-- Contenido principal -->
    <main id="contenido" class="flex-1">
      <slot />
    </main>

    <!-- Pie de página -->
    <Footer />
  </body>
</html>
