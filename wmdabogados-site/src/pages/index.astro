---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="Inicio | WMD Consultores" description="Consultoría legal y estratégica en Chile.">
  <!-- Hero -->
  <section class="relative bg-petroleo text-white py-20 bg-cover bg-center"
    style="background-image: url('/images/edificio.jpg');">
    <!-- Capa de color semitransparente para que se lea bien el texto -->
    <div class="absolute inset-0 bg-petroleo bg-opacity-20"></div>

    <div class="relative max-w-5xl mx-auto text-center space-y-6">
      <h1 class="text-4xl md:text-5xl font-bold">WMD CONSULTORES</h1>
      <p class="text-lg md:text-xl">
        Asesoría confiable, ética y estratégica para empresas y personas.
      </p>
      <a
        href="/contacto/"
        class="btn btn-secondary mt-6"
      >
        Agenda una consulta
      </a>
    </div>
  </section>

  <!-- Áreas de práctica -->
  <section class="max-w-6xl mx-auto px-4 py-16 grid md:grid-cols-3 gap-6">
    <a href="/areas/" class="p-6 border rounded-lg shadow hover:shadow-lg bg-white">
      <h2 class="text-xl font-bold mb-2">Derecho de Familia</h2>
      <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>
    </a>
    <a href="/areas/" class="p-6 border rounded-lg shadow hover:shadow-lg bg-white">
