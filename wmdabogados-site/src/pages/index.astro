    <div class="max-w-5xl mx-auto text-center space-y-6">
      <h2 class="text-3xl font-bold">Nuestro Equipo</h2>
      <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>
      <a href="/equipo/" class="btn btn-primary">Conoce más</a>
    </div>
  </section>

  <!-- Blog -->
  <section class="max-w-6xl mx-auto px-4 py-16">
    <h2 class="text-3xl font-bold mb-6 text-center">Últimos Artículos</h2>
    <div class="grid md:grid-cols-3 gap-6">
      <a href="/blog/articulo-1/" class="p-6 border rounded-lg shadow bg-white hover:shadow-lg">
